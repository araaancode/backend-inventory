# Basic Settings
PORT=5000
NODE_ENV=development

# JWT Authentication Settings
JWT_SECRET=your_jwt_super_secret_key_here
JWT_EXPIRES_IN=30d
JWT_COOKIE_EXPIRES=30

# Database Settings
MONGO_URI=mongodb://localhost:27017/your_database_name

# Session Settings
SESSION_SECRET=your_session_secret_key_here
SESSION_MAX_AGE=86400000 # 1 day in ms

# OTP API Key Settings (Example: Kavenegar)
SEND_OTP_API_KEY=your_kavenegar_api_key_here

# Email Settings (Example: SMTP)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password_here
EMAIL_FROM=no-reply@example.com

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# CSRF Settings
CSRF_SECRET=your_csrf_secret_key_here

# Cookie Settings
COOKIE_SECRET=your_cookie_secret_key_here
COOKIE_MAX_AGE=86400000 # 1 day in ms

# Rate Limiting Settings
RATE_LIMIT_WINDOW_MS=15*60*1000 # 15 minutes
RATE_LIMIT_MAX=100 # limit each IP to 100 requests per windowMs